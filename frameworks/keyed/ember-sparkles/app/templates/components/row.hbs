<tr class={{@rowClass}}>
  <td class="col-md-1">{{@item.id}}</td>

  <td class="col-md-4">
    <a style='cursor: pointer' onclick={{action @onSelect}}>
      {{@item.label}}
    </a>
  </td>

  <td class="col-md-1">
    <a onclick={{action @onRemove}}>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
  </td>

  <td class="col-md-6"></td>
</tr>