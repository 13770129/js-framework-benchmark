<div class="jumbotron">
  <div class="row">
    <div class="col-md-6">
      <h1>Ember v3.9.1</h1>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-sm-6 smallpad">
          <BsButton id="run" @onClick={{action this.create}}>
            Create 1,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="runlots" @onClick={{action this.runLots}}>
            Create 10,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="add" @onClick={{action this.add}}>
            Append 1,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="update" @onClick={{action this.update}}>
            Update every 10th row
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="clear" @onClick={{action this.clear}}>
            Clear
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="swaprows" @onClick={{action this.swapRows}}>
            Swap Rows
          </BsButton>
        </div>
      </div>
    </div>
  </div>
</div>


<table class="table table-hover table-striped test-data">
  <tbody>
    {{~#each this.data key="id" as |item|~}}

      <tr class={{if (eq item.id this.selected) "danger" "x"}}>
        <td class="col-md-1">{{item.id}}</td>

        <td class="col-md-4">
          <a onclick={{action this.select item.id}} role="button">
            {{item.label}}
          </a>
        </td>

        <td class="col-md-1">
          <a onclick={{action this.remove item.id}} role="button">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </a>
        </td>

        <td class="col-md-6"></td>
      </tr>

    {{~/each~}}
  </tbody>
</table>



