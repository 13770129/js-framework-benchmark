<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h1>Ember v3.5.1</h1>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-sm-6 smallpad">
                    {{#bs-button id='run' onClick=(action create)}}
                      Create 1,000 rows
                    {{/bs-button}}
                </div>
                <div class="col-sm-6 smallpad">
                    {{#bs-button id='runlots' onClick=(action runLots)}}
                      Create 10,000 rows
                    {{/bs-button}}
                </div>
                <div class="col-sm-6 smallpad">
                    {{#bs-button id='add' onClick=(action add)}}
                      Append 1,000 rows
                    {{/bs-button}}
                </div>
                <div class="col-sm-6 smallpad">
                    {{#bs-button id='update' onClick=(action update)}}
                      Update every 10th row
                    {{/bs-button}}
                </div>
                <div class="col-sm-6 smallpad">
                    {{#bs-button id='clear' onClick=(action clear)}}
                      Clear
                    {{/bs-button}}
                </div>
                <div class="col-sm-6 smallpad">
                    {{#bs-button id='swaprows' onClick=(action swapRows)}}
                      Swap Rows
                    {{/bs-button}}
                </div>
            </div>
        </div>
    </div>
</div>


<table class="table table-hover table-striped test-data">
  <tbody>
  {{#each data key='id' as |item|}}

    <tr class={{if (eq item.id selected) 'danger' 'x'}}>
      <td class="col-md-1">{{item.id}}</td>

      <td class="col-md-4">
        <a style='cursor: pointer' onclick={{action select item.id}}>
          {{item.label}}
        </a>
      </td>

      <td class="col-md-1">

        <a onclick={{action remove item.id}}>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </a>
      </td>

      <td class="col-md-6"></td>
    </tr>

  {{/each}}
  </tbody>
</table>



<span class="preloadicon glyphicon glyphicon-remove" aria-hidden="true"></span>
