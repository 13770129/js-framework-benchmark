<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h1>Ember v3.3.0</h1>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-sm-6 smallpad">
                    <button type="button" class="btn btn-primary btn-block" id="run" {{action create}}>
                      Create 1,000 rows
                    </button>
                </div>
                <div class="col-sm-6 smallpad">
                    <button type="button" class="btn btn-primary btn-block" id="runlots" {{action runLots}}>
                      Create 10,000 rows
                    </button>
                </div>
                <div class="col-sm-6 smallpad">
                    <button type="button" class="btn btn-primary btn-block" id="add" {{action add}}>
                      Append 1,000 rows
                    </button>
                </div>
                <div class="col-sm-6 smallpad">
                    <button type="button" class="btn btn-primary btn-block" id="update" {{action update}}>
                      Update every 10th row
                    </button>
                </div>
                <div class="col-sm-6 smallpad">
                    <button type="button" class="btn btn-primary btn-block" id="clear" {{action clear}}>
                      Clear
                    </button>
                </div>
                <div class="col-sm-6 smallpad">
                    <button type="button" class="btn btn-primary btn-block" id="swaprows" {{action swapRows}}>
                      Swap Rows
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{{data-rows rowData=rows.data onSelect=(action select) onRemove=(action remove) selected=rows.selected}}

<span class="preloadicon glyphicon glyphicon-remove" aria-hidden="true"></span>
