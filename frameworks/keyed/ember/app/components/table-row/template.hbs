<tr class={{if @item.selected "danger" "x"}}>
  <td class="col-md-1">{{@item.id}}</td>

  <td class="col-md-4">
    <a {{action @onSelect @item.id}} role="button">
      {{@item.label}}
    </a>
  </td>

  <td class="col-md-1">
    <a {{action @onRemove @item.id}} role="button">
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
  </td>

  <td class="col-md-6"></td>
</tr>