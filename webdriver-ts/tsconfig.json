{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
  "include": ["src/**/*.ts", "jest.config.js"]
}
