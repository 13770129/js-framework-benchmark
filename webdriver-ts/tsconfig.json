{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "typeRoots": ["./node_modules/@types", "./src/typings"],

    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
